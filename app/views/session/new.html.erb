<% provide(:title, "Bejelentkezés") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col col-sm-8 col-md-6">
    <%= form_for(:session, url: bejelentkezes_path) do |f| %>

      <div class="form-group">
        <%= f.label :email, 'E-mail cím:' %>
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-envelope"></i>
          </div>
          <%= f.email_field :email, class: 'form-control', placeholder: "Adja meg email címét" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Jelszó:' %>
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-key"></i>
          </div>
          <%= f.password_field :password, class: 'form-control', placeholder: "Adja meg jelszavát" %>
        </div>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Bejelentkezés", class: "btn btn-primary" %>
      </div>
      <div class="row">
        <div class="col text-center">
          <%= link_to "Regisztráció", regisztracio_path %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>