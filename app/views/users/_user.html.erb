<article id="user-<%= user.id %>" class="user">
  <div class="row">
    <div class="col-4">
      <%= link_to user.username, user %>
    </div>
    <div class="col-3">
      <%= user.lastname %>
    </div>
    <div class="col-3">
      <%= user.firstname %>
    </div>
    <div class="col-2 text-right">
      <% if current_user?(user) %>
        <%= link_to ("<i class='fa fa-pencil'></i>").html_safe, edit_user_path(current_user), class: 'text-warning' %>
      <%end %>
      <% if current_user.admin? && !current_user?(user) %>
        <%= link_to ("<i class='fa fa-times'></i>").html_safe, user, method: :delete,
                                      data: { confirm: "Biztos benne?" }, class: 'text-danger' %>
      <% end %>
    </div>
  </div>
</article>