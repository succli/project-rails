<% provide(:title, "Regisztráció") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col col-sm-6">
      <%= form_for(@user, url: regisztracio_path, html: { multipart: true }) do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="form-group">
          <%= f.label :username, 'Felhasználónév:' %>
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-user"></i>
            </div>
            <%= f.text_field :username, class: "form-control", placeholder: "Adja meg felhasználónevét" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, 'E-mail cím:' %>
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </div>
            <%= f.email_field :email, class: "form-control", placeholder: "Adja meg email címét" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Jelszó:' %>
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-key"></i>
            </div>
            <%= f.password_field :password, class: "form-control", placeholder: "Adja meg jelszavát" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Jelszó ismét:' %>
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-key"></i>
            </div>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Adja meg jelszavát ismét" %>
          </div>
        </div>
        <div class="form-group text-center">
          <div class="form-avatar">
            <%= f.label :avatar, 'Avatar feltöltése' %>
            <%= f.file_field :avatar, class: "form-upload" %>
          </div>
        </div>
        <div class="form-group text-center">
          <%= f.submit "Regisztráció", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>