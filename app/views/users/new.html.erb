<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= form_for(@user) do |f| %>
        <div class="form-group">
          <%= f.text_field :username, class: "form-control", placeholder: "Felhasználónév" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control", placeholder: "Email cím" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control", placeholder: "Jelszó" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Jelszó ismét" %>
        </div>
      <% end %>
    </div>
  </div>
</div>